#include <stdio.h>

int main() 
{
    char kelime[20];
    printf("bir kelime girin: ");
    scanf("%s", kelime);

    int i;
// stringin bittigini anlamak icin '\0' karakteri kullaniliyor
// printf %s asagidaki dongu gibi calisiyor

    for (i = 0 ; kelime[i] != '\0' ; i++)
    printf("%c", kelime[i]);
    printf("\n\n");
return 0;
}
